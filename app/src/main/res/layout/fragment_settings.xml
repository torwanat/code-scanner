<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:orientation="vertical"
    tools:context=".SettingsFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/settings"
        android:textColor="@color/mainText"
        android:textSize="48sp" />

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tvMotiveSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/change_mode"
        android:textColor="@color/mainText"
        android:textSize="24sp" />

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMode"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:text="@string/mode"
            android:textColor="@color/mainText" />

        <Spinner
            android:id="@+id/spMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/mode_options"
            android:textColor="@color/mainText" />

        <View
            android:id="@+id/divider13"
            android:layout_width="80dp"
            android:layout_height="match_parent" />


    </LinearLayout>

    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tvDimensionsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/generated_codes_dimensions"
        android:textColor="@color/mainText"
        android:textSize="24sp" />

    <View
        android:id="@+id/divider9"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvWidth"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:text="@string/width"
            android:textColor="@color/mainText" />

        <SeekBar
            android:id="@+id/sbWidth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="2048"
            android:progress="1024"/>

        <TextView
            android:id="@+id/tvWidthPixels"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:text="@string/_1024_px"
            android:textColor="@color/mainText" />

    </LinearLayout>

    <View
        android:id="@+id/divider10"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvHeight"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:text="@string/height"
            android:textColor="@color/mainText" />

        <SeekBar
            android:id="@+id/sbHeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="2048"
            android:progress="1024"/>

        <TextView
            android:id="@+id/tvHeightPixels"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:text="@string/_1024_px"
            android:textColor="@color/mainText" />

    </LinearLayout>

    <View
        android:id="@+id/divider11"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tvPathSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/generated_codes_path"
        android:textColor="@color/mainText"
        android:textSize="24sp" />

    <View
        android:id="@+id/divider12"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPath"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:text="@string/file_path"
            android:textColor="@color/mainText" />

        <EditText
            android:id="@+id/etFilePath"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/mainText"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>